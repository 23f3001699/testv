{
	"name": "Verilog Development Environment",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	
	// Configure Verilog-related VS Code extensions
	"customizations": {
		"vscode": {
			"extensions": [
				// Verilog/SystemVerilog language support
				"mshr-h.veriloghdl",
				// SystemVerilog language support
				"eirikpre.systemverilog",
				// TerosHDL - Advanced HDL tools
				"teros-technology.teroshdl",
				// WaveTrace viewer
				"wavetrace.wavetrace"
			],
			"settings": {
				// Configure Verilog extension to use tools from OSS CAD Suite
				"verilog.linting.linter": "verilator",
				"verilog.linting.verilator.arguments": "",
				"verilog.ctags.path": "/opt/oss-cad-suite/bin/ctags"
			}
		}
	},

	// Use the root user inside the container
	"remoteUser": "root",
	
	// Post-create command to verify the installation
	"postCreateCommand": "yosys --version && echo 'OSS CAD Suite installed successfully!'",
	
	// Features can be added here if needed
	"features": {}
}
